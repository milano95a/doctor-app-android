<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteType"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="NoteType"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteType"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author: " />

            <TextView
                android:id="@+id/docName"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="[doctor_name]" />
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin1"
            android:layout_marginTop="24dp"
            android:text="Last modify" />


        <CheckBox
            android:id="@+id/chartBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/colorPrimary"
            android:elevation="3dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noteName"
            android:layout_marginStart="152dp"
            android:layout_marginTop="32dp"
            android:text="speciality" />

        <TextView
            android:id="@+id/modifyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speciality"
            android:layout_marginStart="152dp"
            android:layout_marginTop="32dp"
            android:text="01.01.2017" />

        <LinearLayout
            android:id="@+id/sharedLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/modifyDate"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shared to:" />

            <TextView
                android:id="@+id/sharedTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabina Shukurova, otolaryngologist"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for: " />

            <TextView
                android:id="@+id/shareTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/noteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="152dp"
            android:text="Note Name Here"
            android:textColor="@android:color/black" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/endShareBtn"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/sharedLayout"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/chart_button"
            android:text="end"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>